FROM golang:1.20-alpine AS builder
LABEL authors=afif

WORKDIR /src
COPY . .

ENV CGO_ENABLED=0

# Need install ca-certificates for tls compatibility for go library
RUN apk update && \
  apk add --no-cache ca-certificates=20230506-r0 && \
  update-ca-certificates

# Reduce binary size by removing debug information
RUN go fmt ./... && \
  go mod tidy && \
  go build -ldflags "-w -s" -o tempsy-client main.go

FROM scratch
WORKDIR /app

COPY --from=builder /src/tempsy-client .
COPY --from=builder /src/web ./web
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/

CMD [ "./tempsy-client" ]
